<body>
    <h1>Jira Issue Collector Test Page</h1>
    <p>Click the button below to open the Jira Issue Collector.</p>
    <button id="openCollector">Report an Issue</button>

    <!-- Jira Issue Collector Script -->
    <script src="https://jira.virtuosgames.com:8443/plugins/servlet/issueCollectorBootstrap.js?collectorId=14a0bfb8&locale=en_US"></script>

    <script>
        $(document).ready(function() {
            $('#openCollector').on('click', function() {
                if (typeof window.IssueCollector !== 'undefined') {
                    window.IssueCollector.launch();
                } else {
                    alert('IssueCollector script not loaded yet.');
                }
            });
        });
    </script>
</body>
